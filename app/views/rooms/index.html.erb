<div class="roomWrapper">
  <div class="roomContainer">
    <h3>登録済み施設一覧</h3>

    <div>
      <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
      <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
      <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"/>
      </svg>
      <%= link_to "施設の新規登録", new_room_path, class: "text-decoration-none" %>
    </div>

    <div class="roomTable">
      <table class="table table-striped">
        <thead>
          <tr>
            <th scope="col">画像</th>
            <th scope="col">施設名</th>
            <th scope="col">紹介文</th>
            <th scope="col">料金</th>
            <th scope="col">作成日</th>
            <th></th>
          </tr>
        </thead>

        <tbody>
          <% @rooms.each do |room| %>
            <tr>
              <td>
                <% if room.accommodation_img.attached? %>
                  <%= image_tag room.accommodation_img, size: "80x60" %>
                <% else %>
                  <%= image_tag "default_room.png", size: "80x60" %>
                <% end %>
              </td>
              <td><%= link_to "#{room.accommodation_name}", room_path(room), class: "text-decoration-none" %></td>
              <td><%= room.accommodation_detail %></td>
              <td><%= number_to_currency(room.accommodation_fee, format: "%u%n", unit: "￥")+"~" %></td>  <%# 数値を通貨フォーマットに変換 %>
              <td><%= room.created_at.strftime("%Y/%m/%d") %></td>
              <td>
                <%= link_to "編集", edit_room_path(room), class: "text-decoration-none roomTableEdit" %><br>
                <%= link_to "削除", room_path(room), method: :delete, class: "text-decoration-none roomTableDelete", data: { confirm: "本当に削除しますか？" } %>
              </td>
            </tr>
          <% end %>
        </tbody>

      </table>
    </div>

  </div>
</div>
