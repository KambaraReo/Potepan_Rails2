<div class="configWrapper">
  <div class="configContainer">
    <div>
      <h3>設定</h3>
      <%= link_to "アカウント", user_path(@user), {class: "accountLink", style: "color: rgb(59, 59, 59);"} %>
      <%= link_to "プロフィール", users_profile_path(@user), {class: "profileLink", style: "color: rgb(216, 147, 18);"} %>
    </div>

    <h4>プロフィール情報</h4>
    <div class="configProfileEdit">
      <%= form_with model: @user do |f| %>
        <div class="field">
          <%= f.label :avatar, "プロフィール画像" %>
          <div class="profileImage">
            <% if @user.avatar.attached? %>
              <%= image_tag @user.avatar, size: "50x50" %>
            <% else %>
              <%= image_tag "default_avatar.png", size: "50x50" %>
            <% end %>
            <%= f.file_field :avatar%>
          </div>
        </div>

        <div class="field">
          <%= f.label :name, "ユーザー名" %><br>
          <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
          <span class="errorMessage">
            <% if @user.errors.include?(:name) %>
              <%= @user.errors.full_messages_for(:name).first %>
            <% end %>
          </span>
        </div>

        <div class="field">
          <%= f.label :introduction, "自己紹介" %><br>
          <%= f.text_area :introduction %>
        </div>

        <div class="configProfileEditButton">
          <div>
            <%= link_to "キャンセル", users_profile_path(@user) %>
          </div>

          <div class="actions">
            <%= f.submit "保存" %>
          </div>
        </div>
      <% end %>
    </div>

  </div>

</div>