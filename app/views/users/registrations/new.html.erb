<div class="accountFormWrapper">
  <div class="accountCreateFormContainer">
    <h3>アカウント新規作成</h3>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="field required">
        <%= f.label :name, "ユーザー名" %><br>
        <%= f.text_field :name, autofocus: true, placeholder: "ユーザー名を入力" %><br>
        <span class="errorMessage">
          <% if resource.errors.include?(:name) %>
            <%= resource.errors.full_messages_for(:name).first %>
          <% end %>
        </span>
      </div>

      <div class="field required">
        <%= f.label :email, "メールアドレス" %><br>
        <%= f.email_field :email, placeholder: "メールアドレスを入力", autocomplete: "email" %><br>
        <span class="errorMessage">
          <% if resource.errors.include?(:email) %>
            <%= resource.errors.full_messages_for(:email).first %>
          <% end %>
        </span>
      </div>

      <div class="field required">
        <%= f.label :password, "パスワード" %><br>
        <%= f.password_field :password, placeholder: "パスワードを入力", autocomplete: "new-password" %><br>
        <span class="errorMessage">
          <% if resource.errors.include?(:password) %>
            <%= resource.errors.full_messages_for(:password).first %>
          <% end %>
        </span>
      </div>

      <div class="field required lastField">
        <%= f.label :password_confirmation, "パスワード(確認用)" %><br>
        <%= f.password_field :password_confirmation, placeholder: "パスワード(確認用)を入力", autocomplete: "new-password" %><br>
        <span class="errorMessage">
          <% if resource.errors.include?(:password_confirmation) %>
            <%= resource.errors.full_messages_for(:password_confirmation).first %>
          <% end %>
        </span>
      </div>

      <div class="actions">
        <%= f.submit "アカウントを作成" %>
      </div>
    <% end %>

    <%= render "users/shared/links" %>
  </div>

</div>