<div class="accountFormWrapper">
  <div class="logInFormContainer">
    <h3>ログイン</h3>

    <p class="alert"><%= alert %></p>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :email, "メールアドレス" %><br>
        <%= f.email_field :email, autofocus: true, placeholder: "メールアドレスを入力", autocomplete: "email" %>
      </div>

      <div class="field lastField">
        <%= f.label :password %><br>
        <%= f.password_field :password, placeholder: "パスワードを入力", autocomplete: "current-password" %>
      </div>

      <div class="actions">
        <%= f.submit "ログイン" %>
      </div>
    <% end %>

    <%= render "users/shared/links" %>
  </div>

</div>
